# Racing Data Platform - Environment Configuration
# Copy this file to .env and update with your settings

# Application
DEBUG=True
APP_NAME="Racing Data Platform"

# API Configuration
API_V1_PREFIX=/api
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Data Paths (relative to project root)
DATA_DIR=./data
RAW_DATA_DIR=./data/raw
PROCESSED_DATA_DIR=./data/processed
MODELS_DIR=./data/models

# Cache Settings
REDIS_HOST=localhost
REDIS_PORT=6379
USE_CACHE=True
CACHE_TTL=3600

# Database
DATABASE_URL=sqlite:///./racing_data.db

# Racing Constants
PIT_STOP_TIME_LOSS=25.0
FUEL_TANK_CAPACITY=120.0

# Development
LOG_LEVEL=INFO